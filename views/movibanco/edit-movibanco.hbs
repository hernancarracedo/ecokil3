{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}
 
        <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2><i class="fa fa-bank"></i> <strong>Modificacion datos movimiento bancario</strong></h2>
               
                </div>
                <div class="col-lg-2">

                </div>
            </div>
        <div class="wrapper wrapper-content animated fadeInRight">
 
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-content">

                            <form action="/movibanco/edit-movibanco/{{result_movibanco.id_movibanco}}?_method=PUT" method="POST">
                                <div class="col-sm-12"></div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Fecha</label>
                                    <div class="col-sm-10"><input type="date" class="form-control" name="fecha" value="{{result_movibanco.fecha}}"></div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Monto</label>
                                    <div class="col-sm-10"><input type="text" name="monto" class="form-control" value="{{result_movibanco.monto}}" /></div>
                                </div>      

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Nro Comprobante</label>
                                    <div class="col-sm-10"><input type="text" name="nro_comprob" class="form-control" value="{{result_movibanco.nro_comprob}}" /></div>
                                </div>                                                                 

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Concepto</label>
                                    <div class="col-md-10">    
                                        <select  name ="id_movibanco_concepto" class="form-control show-tick">
                                            <option value="{{result_movibanco.id_movibanco_concepto}}">{{result_movibanco.tx_movibanco_concepto}}</option>
                                            {{#each result_concepto}}
                                            <option value="{{this.id_movibanco_concepto}}">{{this.tx_movibanco_concepto}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Concepto</label>
                                    <div class="col-sm-10"><input type="text" name="concepto" class="form-control" value="{{result_movibanco.concept}}" /></div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Referencia</label>
                                    <div class="col-sm-10"><input type="text" name="referencia" class="form-control" value="{{result_movibanco.referencia}}" /></div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Saldo</label>
                                    <div class="col-sm-10"><input type="text" name="saldo" class="form-control" value="{{result_movibanco.saldo}}" /></div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Observaciones</label>
                                    <div class="col-sm-10"><input type="text" name="observaciones" class="form-control" value="{{result_movibanco.observaciones}}" /></div>
                                </div>
            
                                <div class="hr-line-dashed"></div>                                                                                              
                                    <button class="btn btn-primary btn-block" type="submit">Guardar Cambios en Movimiento Bancario</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
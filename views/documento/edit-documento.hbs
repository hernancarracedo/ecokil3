        <div class="row wrapper border-bottom white-bg page-heading">
                <div class="col-lg-10">
                    <h2><i class="fa fa-file-pdf-o"></i> <strong>Modificar Informacion Asociada al Documento</strong></h2>
               
                </div>
                <div class="col-lg-2">

                </div>
            </div>
        <div class="wrapper wrapper-content animated fadeInRight">
 
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox ">
                        <div class="ibox-content">

                            <form action="/documento/edit-documento/{{result_docu.id_docu}}?_method=PUT" method="POST">
                                <div class="col-sm-12"></div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Nombre Documento</label>
                                    <div class="col-sm-10"> <input type="text" name="tx_docu" class="form-control" placeholder="Nombre del documento" value="{{result_docu.tx_docu}}" /></div>
                                </div>

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Tipo Documento</label>
                                    <div class="col-md-10">    
                                        <select  name ="id_docu_tipo" class="form-control show-tick">
                                            <option value="{{result_docu.id_docu_tipo}}">{{result_docu.tx_docu_tipo}}</option>
                                            {{#each result_tipodocu}}
                                                <option   value="{{this.id_docu_tipo}}">{{this.tx_docu_tipo}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>       

                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Cliente</label>
                                    <div class="col-md-10">    
                                        <select  name ="id_cliente" class="form-control show-tick">
                                            <option value="{{result_docu.id_cliente}}">{{result_docu.tx_cliente}}</option>
                                            {{#each result_cliente}}
                                                <option value="{{this.id_cliente}}">{{this.tx_cliente}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>                                                         
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">Observaciones</label>
                                    <div class="col-sm-10"><input type="text" name="observaciones" class="form-control" placeholder="Obsevaciones" value="{{result_docu.observaciones}}" /></div>
                                </div>
            
                                <div class="hr-line-dashed"></div>                                                                                              
                                    <button class="btn btn-primary btn-block" type="submit">Guardar Cambios en la Informacion del Documento</button>
                                </div>
                            </form>



                        </div>
                    </div>
                </div>
            </div>
        </div>
                <div class="col-sm-10">
                  <select name="responsable" class="form-control show-tick">
                    <option value="">-- seleccione responsable --</option>
                    {{#each result_personal}}
                    <option value="{{this.id}}">{{this.responsable}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>


              <div class="form-group row">
                <label class="col-sm-2 col-form-label">Fecha Vencimiento</label>
                <div class="col-sm-10"> <input type="date" name="vencimiento" class="form-control"
                    placeholder="Fecha" /></div>
              </div>




            </div>
